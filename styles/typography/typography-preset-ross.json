{
  "version": 3,
  "$schema": "https://schemas.wp.org/wp/6.7/theme.json",
  "title": "Montserrat & Roboto",
  "slug": "typography-preset-ross",
  "settings": {
    "typography": {
      "fontFamilies": [
        {
          "name": "Roboto",
          "slug": "roboto",
          "fontFamily": "\"Roboto\", serif",
          "fontFace": [
            {
              "fontFamily": "\"Roboto\"",
              "fontStyle": "normal",
              "fontWeight": "100 900",
              "src": [
                "file:./assets/fonts/roboto/Roboto-VariableFont_wdth,wght.ttf"
              ]
            }
          ]
        },
        {
          "name": "Montserrat",
          "slug": "montserrat",
          "fontFamily": "\"Montserrat\", serif",
          "fontFace": [
            {
              "fontFamily": "\"Montserrat\"",
              "fontStyle": "normal",
              "fontWeight": "100 900",
              "src": [
                "file:./assets/fonts/montserrat/Montserrat-VariableFont_wght.ttf"
              ]
            }
          ]
        }
      ],
      "fontSizes": [
        {
          "fluid": false,
          "name": "Small",
          "size": "0.875rem",
          "slug": "small"
        },
        {
          "fluid": {
            "max": "1.125rem",
            "min": "1rem"
          },
          "name": "Medium",
          "size": "1rem",
          "slug": "medium"
        },
        {
          "fluid": {
            "max": "1.375rem",
            "min": "1.125rem"
          },
          "name": "Large",
          "size": "1.38rem",
          "slug": "large"
        },
        {
          "fluid": {
            "max": "2rem",
            "min": "1.75rem"
          },
          "name": "Extra Large",
          "size": "1.75rem",
          "slug": "x-large"
        },
        {
          "fluid": {
            "max": "2.4rem",
            "min": "2.15rem"
          },
          "name": "Extra Extra Large",
          "size": "2.15rem",
          "slug": "xx-large"
        }
      ]
    }
  },
  "styles": {
    "typography": {
      "fontFamily": "var:preset|font-family|roboto",
      "letterSpacing": "0"
    },
    "blocks": {
      "core/navigation": {
        "typography": {
          "fontSize": "var:preset|font-size|large",
          "letterSpacing": "-0.28px",
          "textTransform": "uppercase"
        }
      },
      "core/post-author": {
        "typography": {
          "fontSize": "var:preset|font-size|small"
        }
      },
      "core/post-author-name": {
        "typography": {
          "fontSize": "var:preset|font-size|small"
        }
      },
      "core/post-terms": {
        "typography": {
          "fontWeight": "500"
        }
      },
      "core/pullquote": {
        "typography": {
          "fontFamily": "var:preset|font-family|roboto",
          "fontSize": "var:preset|font-size|xx-large",
          "fontWeight": "200"
        }
      },
      "core/search": {
        "typography": {
          "textTransform": "uppercase"
        }
      },
      "core/site-tagline": {
        "typography": {
          "fontSize": "var:preset|font-size|large"
        }
      },
      "core/site-title": {
        "typography": {
          "textTransform": "uppercase"
        }
      }
    },
    "elements": {
      "button": {
        "typography": {
          "fontWeight": "500",
          "letterSpacing": "-0.36px",
          "textTransform": "uppercase"
        }
      },
      "heading": {
        "typography": {
          "fontFamily": "var:preset|font-family|roboto",
          "fontWeight": "300",
          "letterSpacing": "-0.5px",
          "lineHeight": "1.2"
        }
      }
    }
  }
}
